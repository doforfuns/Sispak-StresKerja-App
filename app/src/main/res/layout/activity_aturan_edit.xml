<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bbackground">

    <View
        android:id="@id/view"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:background="@drawable/bg_purple" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_simpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/ic_add"
        app:layout_anchor="@id/lv_gejala" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_layout_white"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingTop="13dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/nama_penyakit"
                android:fontFamily="@font/mregular"
                android:textColor="@color/black"
                android:textAppearance="?android:textAppearanceMedium"/>

            <TextView
                android:id="@+id/tv_nama_penyakit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/mmedium"
                android:text="@string/nama_penyakit"
                android:textColor="@color/black"
                android:textAppearance="?android:textAppearanceMedium"
                android:background="@color/graySecondary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/gejala"
                android:fontFamily="@font/mregular"
                android:textColor="@color/black"
                android:textAppearance="?android:textAppearanceMedium"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lv_gejala"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/graySecondary" />

        </LinearLayout>

</FrameLayout>
