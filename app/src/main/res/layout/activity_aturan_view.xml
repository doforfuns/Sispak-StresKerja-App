<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bbackground">

    <View
        android:id="@id/view"
        android:layout_width="match_parent"
        android:layout_height="233dp"
        android:background="@drawable/bg_purple" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_layout_white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:gravity="center|top"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/nama_penyakit"
            android:fontFamily="@font/mregular"
            android:textColor="@color/black"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/tv_nama_penyakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/nama_penyakit"
            android:textColor="@android:color/black"
            android:fontFamily="@font/mmedium"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/gejala"
            android:fontFamily="@font/mregular"
            android:textColor="@color/black"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/tv_daftar_gejala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/tidak_ada_gejala"
            android:fontFamily="@font/mmedium"
            android:textColor="@color/black"
            android:textAppearance="?android:textAppearanceMedium"/>

        <Button
            android:layout_width="match_parent"
            android:background="@drawable/bg_btn_blue_primary"
            android:fontFamily="@font/mmedium"
            android:id="@+id/btn_atur_ulang"
            android:layout_margin="20dp"
            android:text="@string/atur_ulang_gejala"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:backgroundTint="@color/bluePrimary"
            android:layout_height="55dp"

            />

    </LinearLayout>

</FrameLayout>