<!--        app:layout_constraintTop_toBottomOf="@+id/btn_dashboarduser"-->
<!--        />-->

    <Button
        android:id="@+id/btn_dashboarduser"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_btn_blue_primary"
        android:fontFamily="@font/mmedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/my_dashboard"
        android:textColor="#FFF"
        android:textSize="20sp"
        app:backgroundTint="@color/greenpremier"
        app:layout_constraintTop_toBottomOf="@+id/btn_penyakit"
        />

</LinearLayout>

